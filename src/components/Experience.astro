---
import { experiences } from "../assets/data.ts";
import ExperienceItem from "./ExperienceItem.astro";
import Briefcase from "./icons/Briefcase.astro";
---

<section class="my-12 scroll-mt-36" id="experience">
    <div class="w-[75%] mx-auto mt-20 mb-12 flex gap-1 items-center" data-tech-h2>
        <Briefcase color="#fff" class="size-16" />
        <h2
            class="cursor-pointer font-bold w-fit md:mx-0 md:ml-5 sm:text-6xl xs:text-[40px] xs:mx-auto"
        >
            Experience
        </h2>
    </div>
    <div class="w-[75%] mx-auto">
        <ol
            class="relative flex flex-col gap-y-10 border-s border-gray-200 dark:border-gray-700"
        >
            {
                experiences.map((experience) => (
                    <ExperienceItem {...experience} />
                ))
            }
        </ol>
    </div>
</section>
