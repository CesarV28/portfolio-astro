---
import { projects } from "../assets/data.ts";
import ProjectCard from "../components/ProjectCard.astro";
import FolderPlus from "./icons/FolderPlus.astro";
---

<div class=" bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-purple-900/25 via-slate-900/25 to-background/25 py-8">
    <div class="scroll-mt-36 w-[75%] mx-auto mt-20 mb-10 flex gap-1 items-center" id="projects">
        <FolderPlus color="#fff" class="size-16" />
        <h2
            class="font-bold w-fit md:mx-0 md:ml-5 sm:text-6xl xs:text-[40px] xs:mx-auto"
        >
            Projects
        </h2>
    </div>

    <div
        class="grid mx-auto w-[90%] gap-6 mb-8 xl:grid-cols-4 xl:w-4/5 lg:grid-cols-3 md:grid-cols-2 md:w-[85%] sm:grid-cols-1 xs:grid-cols-1"
    >
        {projects.map((project) => <ProjectCard project={project} />)}
    </div>
</div>
